<%- include ('../partials/header') %>

<div class="continer my-5">
	<header>
		<h1> <%- book.title %> 
			<a href="/books/<%= book.id %>/edit">
				<i class="fa fa-edit"></i>
				</a>
		</h1>
		<br>
		<small><%= (book.updatedAt.toLocaleString("en-CA")) %></small>
	</header>
	<p><strong>By: <%= book.user.fullname %>/</strong></p>
	<hr>
	<div class="content">
	<%- book.content %>
	</div> 
</div>

<%- include ('../partials/footer') %>